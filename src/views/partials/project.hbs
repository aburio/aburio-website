<div class="card border-0 rounded-0">
  <div class="clearfix">
    {{#if video}}
      <video
        class="img-fluid object-fit-cover mb-3 col-md-4 float-md-start me-md-3 mb-md-0 rounded-0"
        autoplay
        loop
        muted
        playsinline
        alt="{{title}} project video"
        poster="{{image}}"
      ><source src="{{video}}" type="video/mp4" /></video>
    {{else if image}}
      <img
        class="img-fluid object-fit-cover mb-3 col-md-4 float-md-start me-md-3 mb-md-0 rounded-0"
        src="{{image}}"
        alt="{{title}} project image"
      />
    {{/if}}
    <h5 class="card-title">{{title}}</h5>
    <div class="collapse mb-2" id="project{{@index}}">
      {{{description}}}
      {{#if modal}}
        <button
          type="button"
          class="btn btn-sm btn-warning text-uppercase"
          data-bs-toggle="modal"
          data-bs-target="#projectModal{{@index}}"
        >
          <i class="{{modal.toggle.icon}}"></i>
          {{modal.toggle.label}}
        </button>
      {{/if}}
      {{#if externalLinks}}
        {{#each externalLinks}}
          <a
            href="{{url}}"
            target="_blank"
            rel="noreferrer"
            class="btn btn-sm btn-warning text-uppercase"
          >
            <i class="{{icon}}"></i>
            {{label}}
          </a>
        {{/each}}
      {{/if}}
    </div>
    <button
      type="button"
      data-bs-toggle="collapse"
      href="#project{{@index}}"
      role="button"
      aria-expanded="false"
      aria-controls="project{{@index}}"
      class="btn btn-sm btn-light text-uppercase collapse-btn"
    ><i class="fa-solid fa-chevron-up show-less"></i><i
        class="fa-solid fa-chevron-down show-more"
      ></i>
    </button>
  </div>
</div>
{{#if @last}}
  <hr class="border-0" />
{{else}}
  <hr class="border-secondary-subtle" />
{{/if}}